pipeline {
    agent any
    triggers {
 //Execute weekdays every four hours starting at minute 0  
     // cron('0 */4 * * 1-5’)
   pollSCM('* * * * * ’) 
    }
        stages {
        stage('Example Build') {
            steps {
                echo 'Hello World'
            }
        }
        stage('Example Deploy') {
            when {
                branch 'devops'
            }
            steps {
                echo 'Deployment showing added trigger'
                sh 'cat README.md'
            }
        }
    }
}
